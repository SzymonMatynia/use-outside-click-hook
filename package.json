{
  "name": "use-outside-click-hook",
  "version": "0.0.54",
  "description": "React use outside click hook. It's a simple hook that allows you to detect clicks outside of a component.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "outside component click react",
    "react outside click"
  ],
  "author": "Szymon Matynia",
  "license": "MIT",
  "devDependencies": {
    "react": "^18.2.0",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "jest": "^29.4.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eterxoz/use-outside-click-hook.git"
  }
}
